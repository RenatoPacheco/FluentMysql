@model FluentMysql.Site.Areas.Admin.ViewsData.MinhaConta.RecuperaForm

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutClean.cshtml";
    ViewBag.Title = "Recupera Acesso";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h2 class="text-center">Recuperar acesso</h2>
            <div class="alertas">
                @Html.Raw(ViewBag.Mensagem)
            </div>
            <form class="form-horizontal" method="post" action="@Url.Action("Recupera", new { })">
                <fieldset>
                    <legend class="sr-only">Formulário de autenticação</legend>
                    @using (Html.BsBeginFormGroupFor(x => x.Login, new { @class = "has-feedback" }))
                    {
                        @Html.LabelFor(x => x.Login, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @autofocus = "autofocus", @title = "Informe seu login, e-mail ou CPF", @placeholder = "Informe seu login, e-mail ou CPF" })
                            </div>
                            @Html.BsValidationMessageFor(x => x.Login, true)
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary btn-lg col-md-6 col-sm-12 col-xs-12" title="clique aqui para solicitar">
                                <i class="fa fa-question-circle"></i>
                                Solicitar
                            </button>
                            <a href="@Url.Action("Login")" class="btn btn-link btn-lg col-md-6 col-sm-12 col-xs-12" title="clique aqui para foltar a tela de login">
                                <i class="fa fa-sign-in"></i>
                                Voltar ao login
                            </a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>