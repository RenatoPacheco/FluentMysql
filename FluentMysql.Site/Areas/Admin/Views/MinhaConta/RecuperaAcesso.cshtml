@model FluentMysql.Site.Areas.Admin.ViewsData.MinhaConta.RecuperaAcessoForm

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutClean.cshtml";
    ViewBag.Title = "Recupera Acesso";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <h2 class="text-center">Recuperar acesso</h2>
            <div class="alertas">
                @Html.Raw(ViewBag.Mensagem)
            </div>
            <form class="form-horizontal" method="post" action="@Url.Action("RecuperaAcesso", new { })">
                <fieldset>
                    <legend class="sr-only">Formulário de autenticação</legend>
                    <p class="text-muted">Enviando seu e-mail, login ou <abbr title="Cadastro de Pessoa Física">CPF</abbr> você poderá solicitar seu login por e-mail ou receber um e-mail com um link para redefinir sua senha.</p>
                    @using (Html.BSFormGroupFor(x => x.Identificacao, false, new { @class = "has-feedback" }))
                    {
                        @Html.LabelFor(x => x.Identificacao, new { @class = "col-sm-3 control-label" })
                        <div class="col-sm-9">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                @Html.TextBoxFor(x => x.Identificacao, new { @class = "form-control", @autofocus = "autofocus", @title = "Informe seu login, e-mail ou CPF", @placeholder = "Informe seu login, e-mail ou CPF", @required = "required" })
                            </div>
                            @Html.BSValidationIconFor(x => x.Identificacao, false)
                            @Html.ValidationMessageFor(x => x.Identificacao, string.Empty, new { @class = "text-danger" })
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button type="submit" name="Acao" value="solicitar-login" class="btn btn-primary btn-lg col-lg-4 col-md-5 col-sm-12  col-xs-12" title="clique aqui para solicitar seu login de acesso">
                                <i class="fa fa-user"></i>
                                Solicitar Login
                            </button>
                            <button type="submit" name="Acao" value="redefinir-senha" class="btn btn-danger btn-lg col-lg-4 col-md-5 col-sm-12  col-xs-12" title="clique aqui para solicitar a redifinição de senha">
                                <i class="fa fa-user-secret"></i>
                                Redefinir Senha
                            </button>
                            <a href="@Url.Action("Login")" class="btn btn-link btn-lg col-lg-4 col-md-2 col-sm-12  col-xs-12" title="clique aqui para foltar a tela de login">
                                <i class="fa fa-sign-in"></i>
                                <span class="hidden-md">Voltar ao login</span>
                            </a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>