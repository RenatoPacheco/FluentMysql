@using FluentMysql.Infrastructure.Entities
@model FluentMysql.Site.Areas.Admin.ViewsData.Usuario.AlteraForm
@{
    ViewBag.Title = "Altera Usuário";
    Usuario MinhaConta = (Usuario)ViewBag.MinhaConta;
}
@section styles{

}
@section scripts{

}
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <h2 class="text-center">@ViewBag.Title</h2>
            <div class="alertas">
                @Html.Raw(ViewBag.Mensagem)
            </div>
            <form class="form-horizontal" method="post" action="@Url.Action("Altera", new { @Id = Model.Id })">
                <fieldset>
                    <legend class="sr-only">Formulário de inserção</legend>
                    @using (Html.BsBeginFormGroupFor(x => x.Nome, new { @class = "has-feedback" }))
                    {
                        @Html.LabelFor(x => x.Nome, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @autofocus = "autofocus", @title = "Informe o título", @placeholder = "Informe o título" })
                            @Html.BsValidationMessageFor(x => x.Nome, true)
                        </div>
                    }
                    @using (Html.BsBeginFormGroupFor(x => x.Sobrenome, new { @class = "has-feedback" }))
                    {
                        @Html.LabelFor(x => x.Sobrenome, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Sobrenome, new { @class = "form-control basic", @title = "Informe a url", @placeholder = "Informe o texto do artigo" })
                            @Html.BsValidationMessageFor(x => x.Sobrenome, true)
                        </div>
                    }
                    @using (Html.BsBeginFormGroupFor(x => x.Email, new { @class = "has-feedback" }))
                    {
                        @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @title = "Informe a url", @placeholder = "Informe o resumo" })
                            @Html.BsValidationMessageFor(x => x.Email, true)
                        </div>
                    }
                    @using (Html.BsBeginFormGroupFor(x => x.Nivel, new { @class = "has-feedback" }))
                    {
                        @Html.LabelFor(x => x.Nivel, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.DropDownListFor(x => x.Nivel, Model.NivelOpcoes((Usuario)ViewBag.MinhaConta), new { @class = "form-control", @title = "Informe a url", @placeholder = "Informe o resumo" })
                            @Html.BsValidationMessageFor(x => x.Nivel, true)
                        </div>
                    }
                    <div class="form-group">
                        <div class="col-sm-offset-3 col-md-offset-2 col-sm-9 col-md-10">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(x => x.Status) @Html.DisplayNameFor(x => x.Status)
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.HiddenFor(x => x.DataCriacao)
                        @Html.HiddenFor(x => x.Id)
                        <div class="col-sm-offset-3 col-md-offset-2 col-sm-9 col-md-10">
                            <button type="submit" class="btn btn-primary btn-lg col-md-6 col-sm-12 col-xs-12" title="clique aqui para salvar">
                                <i class="fa fa-save"></i>
                                Salvar
                            </button>
                            <a href="@Url.Action("Index", new { @Voltar=true })" class="btn btn-link btn-lg col-md-6 col-sm-12 col-xs-12" title="clique aqui para voltar">
                                <i class="fa fa-reply"></i>
                                Voltar
                            </a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>